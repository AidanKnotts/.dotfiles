#bindsym $mod+Control+g gaps outer all plus 2
#bindsym $mod+Control+Shift+g gaps outer all minus 2
mode "gaps" {
        # same bindings, but for the arrow keys
        bindsym Left gaps inner all plus 2
        bindsym Down gaps outer all minus 2
        bindsym Up gaps outer all plus 2
        bindsym Right gaps inner all minus 2

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+g mode "gaps"




